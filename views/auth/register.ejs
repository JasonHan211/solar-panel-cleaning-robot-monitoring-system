<div class="col-12">
  <div class="card rounded-3 shadow position-absolute top-50 start-50 translate-middle">
    <div class="m-5 p-3" style="width: 300px;">
      <h4 class="text-center mb-3">Register</h4>
      <%- include ('../partials/messages') %>
      <form action="/users/register" method="POST">
        
        <label for="name">Name</label>
        <div class="mb-3">
          <input class="form-control" type="name" name="name" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
        </div>
        
        <label for="email">Email</label>
        <div class="mb-3">
          <input class="form-control" type="email" name="email" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
        </div>
  
        <label for="password">Password</label>
        <div class="mb-3">
          <input class="form-control" type="password" name="password" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
        </div>
        
        <label for="password2">Confirm Password</label>
        <div class="mb-3">
          <input class="form-control" type="password" name="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
        </div>
        
        <label for="referralCode">Referral Code</label>
        <div class="mb-3">
          <input class="form-control" type="password" name="referralCode" placeholder="Referral Code" value="<%= typeof referralCode != 'undefined' ? referralCode : '' %>"/>
        </div>
  
        <button type="submit" class="btn btn-dark w-100"> Register </button>
  
      </form>
  
      <a class="link-dark" href="/users/login"> Login</a>
  
    </div>
  </div>
</div>
